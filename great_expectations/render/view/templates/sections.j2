{% block sections %}
    {% for section in sections %}
    <div id="section-{{loop.index}}" class="container-fluid" style="clear:both; margin-bottom: 50px;">
        <div class="row">
            {% set section_loop = loop %}
            {% for content_block in section["content_blocks"] %}
                {% set content_block_loop = loop %}
                {% include 'component.j2' %}
            {% endfor %}
        </div>
    </div>
    {% endfor %}
{% endblock %} 